(defrule ; 16/17 - Ally Markets
    (player-in-game any-ally) ; Are there allies?
    (up-can-build 0 c: market) ; Feudal Age at Minimum
    (up-object-type-count c: monastery > 0) ; Castle Age Minimum
    (up-object-type-count c: market < 3) ; Try 3 Markets
    (up-pending-objects c: market < 1) ; One market at a time and spam if failed placement
    =>
    ;(up-modify-sn sn-placement-to-center c:= 1)
    (up-set-placement-data my-player-number -1 c: -30) ; Try to place a market in the corner of the map
    (up-build place-control 0 c: market)
)

(defrule ; 16/18
    (player-in-game any-ally)
    (current-age == castle-age)
    ; Any extra team game facts go here
    =>
    (up-train 0 c: trade-cart)
    ; Any extra team game actions go here
)

(defrule ; 17/19 - Train Monks and Trash
    (up-research-status c: castle-age == research-complete)
    (military-population < 50)
    ;(up-research-status c: ri-sanctity == research-complete)
    ;(up-research-status c: ri-fervor == research-complete)
    ;(up-research-status c: ri-atonement == research-complete)
    ;(up-research-status c: ri-redemption == research-complete)
    ;(up-research-status c: ri-theocracy == research-complete)
    ;(up-research-status c: ri-illumination == research-complete)
    ;(up-research-status c: ri-block-printing == research-complete)
    ;(up-research-status c: ri-faith == research-complete)
    ;(up-research-status c: ri-heresy == research-complete)
    =>
    (up-modify-goal MonasteryCount c:= 7)
    (up-modify-goal BarracksCount c:= 5)
    (up-train 0 c: monk)
    ;(up-train 0 c: eagle-warrior-line)
    (up-train 0 c: battering-ram-line)
    (up-train 0 c: spearman-line)
    (up-modify-sn sn-maximum-town-size c:= 20)
)

(defrule ; 18/20 - Expand to Enemy
    (up-research-status c: imperial-age == research-complete)
    ;(up-object-type-count-total c: spearman-line > 25)
    ;(up-object-type-count-total c: skirmisher-line > 25)
    ;(up-object-type-count-total c: monk > 50)
    (military-population > 50)
    (up-enemy-buildings-in-town == 0)
    =>
    (up-modify-sn sn-maximum-town-size c:+ 3)
)

(defrule ; 19/21 - Resignation
    (up-object-type-count-total c: town-center == 0)
    (up-object-type-count-total c: villager == 0)
    (military-population < 20)
    =>
    (resign)
)

(defrule
    (current-age == imperial-age)
    (idle-farm-count < 3)
    (up-can-build 0 c: farm)
    (up-pending-objects c: farm < 1)
=>
    (up-modify-goal WoodVillagers c:+ 1)
    (up-set-placement-data my-player-number -1 c: 0)
    (up-build place-control 0 c: farm)
)



(defrule
    (current-age == dark-age)
=>
    (set-strategic-number sn-initial-exploration-required 0)
    (set-strategic-number sn-enable-new-building-system 1)
    (set-strategic-number sn-enable-training-queue 1)
    (set-strategic-number sn-cap-civilian-builders 3)
    (set-strategic-number sn-intelligent-gathering 1)
    (set-strategic-number sn-livestock-to-town-center 1)
    (disable-self)
)

(defrule
    (current-age == dark-age)
=>
    (up-set-offense-priority c: galley-line c: 11)

    (up-set-offense-priority c: camel-line c: 11)
    (up-set-offense-priority c: skirmisher-line c: 11)
    (up-set-offense-priority c: spearman-line c: 11)

    (up-set-offense-priority c: knight-line c: 9)
    (up-set-offense-priority c: archer-line c: 9)

    (up-set-offense-priority c: palisade-wall c: 7)
    (up-set-offense-priority c: stone-wall c: 7)

    (disable-self)
)

(defrule
    (current-age == dark-age)
=>
    (set-strategic-number sn-cap-civilian-explorers 0)
    (set-strategic-number sn-number-explore-groups 1)
    (disable-self)
)

(defrule
    (current-age == dark-age)

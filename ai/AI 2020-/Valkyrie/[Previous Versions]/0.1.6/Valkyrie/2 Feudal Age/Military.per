
(defrule
    (up-object-type-count-total c: archery-range >= 1)
=>

;;;; 5 Minutes for Skirmisher Training

    (enable-timer TIMER_Skirmishers 600)

    (disable-self)
)

(defrule
    (current-age == feudal-age)
    (not(timer-triggered TIMER_Skirmishers))
    (up-object-type-count-total c: archery-range >= 1)
    (up-pending-objects c: skirmisher-line < 1)
=>
    (up-train 0 c: skirmisher-line)
)
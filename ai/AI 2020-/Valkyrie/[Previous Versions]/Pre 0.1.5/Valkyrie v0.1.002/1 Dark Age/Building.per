(defrule
    (current-age == dark-age)
    (or
        (civ-selected hun)
        (up-object-type-count c: house >= 2)
    )
    (up-object-type-count-total c: mill < 1)
    (up-pending-objects c: mill < 1)
=>
    (up-build place-normal 0 c: mill)
)

(defrule
